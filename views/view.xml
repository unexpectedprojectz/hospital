<?xml version="1.0" encoding="UTF-8"?>

<odoo>

    <!-- Hospital View -->
    <record model="ir.ui.view" id="hospital_form_view">
        <field name="name">hospital.form</field>
        <field name="model">hospital.hospital</field>
        <field name="arch" type="xml">
            <form string="Hospital form">
                <sheet>
                    <group>
                        <field name="gestiohospital_id"/>
                        <field name="adreca_id"/>
                    </group>
                    <group>
                        <field name="nom"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="adreca_list_action">
        <field name="name">Hospitals</field>
        <field name="res_model">hospital.hospital</field>
        <field name="view_type">form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">Crea un hospital</p>
        </field>
    </record>

    <!-- Menu de dalt -->
    <menuitem id="main_hospital_menu" name="Hospital"/>
    <!-- Menu lateral -->
    <menuitem id="hospital_menu" name="Hospital" parent="main_hospital_menu"/>
    <!-- Primer item del menu lateral -->
    <menuitem id="hospitals_menu" name="Hospitals" parent="hospital_menu" action="hospitals_list_action"/>


    <!-- Adreca View -->
    <record model="ir.ui.view" id="adreca_form_view">
        <field name="name">adreca.form</field>
        <field name="model">hospital.adreca</field>
        <field name="arch" type="xml">
            <form string="Adreca form">
                <sheet>
	            <group>
                        <field name="hospital_id"/>
                        <field name="metge_id"/>
                        <field name="pacient_id"/>
                    </group>
                    <group>
                        <field name="ciutat"/>
                        <field name="codiPostal"/>
                        <field name="carrer"/>
                        <field name="numero"/>
                        <field name="planta"/>
                        <field name="porta"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="adreca_list_action">
        <field name="name">Adrecas</field>
        <field name="res_model">hospital.adreca</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="adreca_menu" name="Adrecas" parent="hospital_menu" action="adreca_list_action"/>


    <!-- Persona View -->
    <record model="ir.ui.view" id="persona_form_view">
        <field name="name">persona.form</field>
        <field name="model">hospital.persona</field>
        <field name="arch" type="xml">
            <form string="Persona form">
                <sheet>
                    <group>
                        <field name="nom"/>
                        <field name="cognom1"/>
                        <field name="cognom2"/>
                        <field name="numSegSocial"/>
                        <field name="nif"/>
                        <field name="telefon"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="persona_list_action">
        <field name="name">Persones</field>
        <field name="res_model">hospital.persona</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="persona_menu" name="Persones" parent="hospital_menu" action="persona_list_action"/>


    <!-- Gestio Hospital View -->
    <record model="ir.ui.view" id="gestiohospital_form_view">
        <field name="name">gestio_hospital.form</field>
        <field name="model">hospital.gestiohospital</field>
        <field name="arch" type="xml">
            <form string="Gestio Hospital form">
                <sheet>
                    <group>
                        <field name="hospital_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="gestiohospital_list_action">
        <field name="name">Gestions hospitals</field>
        <field name="res_model">hospital.gestiohospital</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="gestiohospital_menu" name="Gestions hospitals" parent="hospital_menu" action="gestiohospital_list_action"/>


    <!-- Historial View -->
    <record model="ir.ui.view" id="historial_form_view">
        <field name="name">historial.form</field>
        <field name="model">hospital.historial</field>
        <field name="arch" type="xml">
            <form string="Historial form">
                <sheet>
                    <group>
                        <field name="hospital_id"/>
                    </group>
                    <group>
                        <field name="codi"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="historial_list_action">
        <field name="name">Historials</field>
        <field name="res_model">hospital.historial</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="historial_menu" name="Historials" parent="hospital_menu" action="historial_list_action"/>


    <!-- Malaltia View -->
